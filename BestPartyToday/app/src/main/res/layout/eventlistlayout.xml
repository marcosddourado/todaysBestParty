<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/eventlistlayout"
    android:maxHeight="100dp"
    android:minWidth="385dp">

    <TextView
        android:textColor="#F0F8FF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Event Name"
        android:id="@+id/list_eventName"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="30sp" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/list_eventRating"
        android:layout_below="@+id/list_eventName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:rating="5"
        android:numStars="5"
        android:focusableInTouchMode="false"
        android:progressTint="#e1c23d"
        android:nestedScrollingEnabled="true"
        style="?android:attr/ratingBarStyleSmall" />

    <TextView
        android:textColor="#F0F8FF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12:00AM-12:00AM"
        android:id="@+id/list_eventTime"
        android:layout_below="@+id/list_eventRating"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="20sp" />

</RelativeLayout>
