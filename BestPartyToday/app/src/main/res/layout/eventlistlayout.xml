<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/eventlistlayout">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/list_eventImage"
        android:src="@drawable/abc_ic_menu_share_mtrl_alpha"
        android:background="#547272"
        android:minHeight="90dp"
        android:minWidth="385dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Event Name"
        android:id="@+id/list_eventName"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="30sp" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/list_eventRating"
        android:layout_below="@+id/list_eventName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:rating="5"
        android:numStars="5"
        android:focusableInTouchMode="false"
        android:progressTint="#e1c23d"
        android:nestedScrollingEnabled="true"
        style="?android:attr/ratingBarStyleSmall" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12:00AM-12:00AM"
        android:id="@+id/list_eventTime"
        android:layout_below="@+id/list_eventRating"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="20sp" />

</RelativeLayout>
